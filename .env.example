# Node Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/security-monitor
MONGODB_USER=admin
MONGODB_PASS=password

# Blockchain RPC Endpoints
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_API_KEY
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org

# API Configuration
API_KEY=your_api_key_here
RATE_LIMIT=100

# Alert Configuration
ENABLE_EMAIL_ALERTS=false
EMAIL_SERVICE=smtp.example.com
EMAIL_USER=alerts@example.com
EMAIL_PASS=password
EMAIL_RECIPIENTS=security@example.com

# LLM Configuration
LLM_API_KEY=your_llm_api_key
LLM_ENDPOINT=https://api.example.com/v1

# Pattern Detection Configuration
PATTERN_SENSITIVITY=0.85
ANOMALY_THRESHOLD=0.9
MAX_BLOCK_RANGE=1000

# Web Dashboard Configuration
DASHBOARD_SECRET=your_dashboard_secret
SESSION_TIMEOUT=3600
